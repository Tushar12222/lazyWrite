{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "types": ["node", "react", "react-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll"
  },
  "include": ["src", "src/types"],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll", "node_modules/@types/node/globals.typedarray.d.ts"]
}
